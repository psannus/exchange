{
  "name": "exchange",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "npm run build --workspace=client",
    "test": "npm run test --workspace=client && npm run test --workspace=server",
    "test:client": "npm run test --workspace=client",
    "test:server": "npm run test --workspace=server",
    "db:up": "docker compose -f docker/docker-compose.yml up -d && npm run db:migrate --workspace=server",
    "db:down": "docker compose -f docker/docker-compose.yml down",
    "setup": "npm install && npm run db:up"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
